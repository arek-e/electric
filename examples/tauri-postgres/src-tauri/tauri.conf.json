{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build-only",
    "beforeDevCommand": "SERVE=true pnpm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Linearlite",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "scope": [
          { "name": "ollama", "sidecar": true, "args": true }
        ],
        "sidecar": true,
        "open": true
      }
    },
    "bundle": {
      "externalBin": [
        "ollama"
      ],
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "electric-tauri-postgres",
      "longDescription": "",
      "shortDescription": "",
      "targets": "all"
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkyQ0FDQUFDQjY3MzZDQUYKUldTdmJITzJyTXJLa2dhVExWbThtS0NlZEZ3WWhTNnJmS3E0U3NDVGRyM3VodlZuRWhKaUUvTHIK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Linearlite",
        "label": "main",
        "width": 1100
      }
    ]
  }
}
